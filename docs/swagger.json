    "/auth": {
      "post": {
        "tags": ["Auth"],
        "summary": "Logs user into the system",
        "operationId": "loginUser",
        "parameters": [
          {
            "name": "UserData",
            "in": "body",
            "description": "The user's email and password for login",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Successful operation",
            "schema": {
              "properties": {
                "user": {
                  "$ref": "#/definitions/User"
                },
                "access_token": {
                  "type": "string"
                },
                "refresh_token": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Wrong email or password"
          }
        }
      }
    },
    "/auth/activate": {
      "post": {
        "tags": ["Auth"],
        "summary": "Activate recently created user account",
        "operationId": "activateUserAccount",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "description": "This is `activate_token` from email after creating a new user",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "201": {
            "description": "User is activated"
          },
          "400": {
            "description": "Invalid token"
          }
        }
      }
    },
