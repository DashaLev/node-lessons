  "definitions": {
    "User": {
      "type": "object",
      "required": [
        "name",
        "email",
        "password",
        "is_active"
      ],
      "properties": {
        "_id": {
          "type": "string",
          "description": "MongoDB ID"
        },
        "email": {
          "type": "string",
          "example": "example@email.com"
        },
        "name": {
          "type": "string",
          "example": "Jack"
        },
        "role": {
          "type": "string",
          "default": "user"
        },
        "is_active": {
          "type": "boolean",
          "default": false
        },
        "createdAt": {
          "type": "string"
        },
        "updatedAt": {
          "type": "string"
        }
      }
    },
    "Post": {
      "type": "object",
      "required": [
        "title",
        "post_body",
        "user_id"
      ],
      "properties": {
        "_id": {
          "type": "string",
          "description": "MongoDB ID"
        },
        "post_body": {
          "type": "string"
        },
        "user_id": {
          "type": "string",
          "description": "MongoDB ID"
        },
        "createdAt": {
          "type": "string"
        },
        "updatedAt": {
          "type": "string"
        }
      }
    }
  }
