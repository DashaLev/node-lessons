        "operationId": "createForgotPasswordToken",
        "parameters": [
          {
            "name": "Email",
            "in": "body",
            "description": "User's email created the account with and to it will send a letter with token",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "example": "example@email.com"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Successful operation"
          },
          "400": {
            "description": "Invalid token"
          }
        }
      },
